{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "stripInternal": true,
        "pretty": true,
        "declaration": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "esm",
        "cjs",
        "**/*.test.ts",
        "example"
    ]
}